{
  "Mcp": {
    "Server": {
      "Name": "ProjectKnowledge",
      "Version": "1.0.0",
      "Description": "Knowledge management server with federation and real-time updates",
      "MaxRequestSize": 10485760,
      "RequestTimeout": 30000
    },
    "Transport": {
      "Stdio": {
        "Enabled": true
      },
      "Http": {
        "Enabled": true,
        "Port": 5100,
        "Host": "localhost",
        "AllowedOrigins": ["http://localhost:*", "https://localhost:*"],
        "RequireApiKey": false,
        "ApiKey": ""
      },
      "WebSocket": {
        "Enabled": true,
        "Host": "localhost",
        "Port": 8080,
        "Path": "/ws",
        "EnableHeartbeat": true,
        "HeartbeatInterval": 30,
        "ConnectionTimeout": 600,
        "MaxConnections": 100
      }
    },
    "Logging": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Information",
        "COA": "Debug"
      },
      "File": {
        "Path": "~/.coa/knowledge/logs/",
        "RollingInterval": "Day",
        "RetainedFileCountLimit": 7
      }
    },
    "Features": {
      "TokenOptimization": true,
      "ResourceProviders": true,
      "Federation": true,
      "RealTimeUpdates": true,
      "BackgroundServices": {
        "Enabled": true,
        "MaintenanceIntervalMinutes": 60,
        "IndexingIntervalMinutes": 30
      }
    }
  },
  "ProjectKnowledge": {
    "Database": {
      "Path": "~/.coa/knowledge/knowledge.db"
    },
    "Federation": {
      "ClientSources": [
        "sql-analyzer",
        "web-tools", 
        "custom-scripts",
        "codesearch"
      ],
      "AllowedOrigins": ["*"]
    },
    "Maintenance": {
      "ArchiveAfterDays": 365,
      "VacuumThresholdMB": 100
    },
    "KnowledgeTypes": {
      "Enabled": ["TechnicalDebt", "ProjectInsight", "WorkNote"]
    },
    "AutoService": {
      "Enabled": true,
      "AutoRestart": true,
      "HealthCheckInterval": 60,
      "MaxRestartAttempts": 3
    },
    "Workspace": {
      "DefaultWorkspace": "default",
      "DetectionStrategy": "GitRoot"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information",
      "COA": "Debug"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Information",
        "System": "Warning",
        "COA": "Debug"
      }
    }
  }
}